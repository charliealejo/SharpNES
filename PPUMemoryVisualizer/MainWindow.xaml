<Window x:Class="PPUMemoryVisualizer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PPUMemoryVisualizer"
        mc:Ignorable="d"
        Title="NES PPU Memory Visualizer" Height="600" Width="1000">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Control Panel -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10">
            <Label Content="Pattern Table:"/>
            <ComboBox x:Name="PatternTableComboBox" Width="100" SelectedIndex="0">
                <ComboBoxItem Content="Table 0 ($0000)"/>
                <ComboBoxItem Content="Table 1 ($1000)"/>
            </ComboBox>
            
            <Label Content="Palette:" Margin="20,0,0,0"/>
            <ComboBox x:Name="PaletteComboBox" Width="100" SelectedIndex="0">
                <ComboBoxItem Content="Palette 0"/>
                <ComboBoxItem Content="Palette 1"/>
                <ComboBoxItem Content="Palette 2"/>
                <ComboBoxItem Content="Palette 3"/>
            </ComboBox>
            
            <Button x:Name="RefreshButton" Content="Refresh" Margin="20,0,0,0" Click="RefreshButton_Click"/>
        </StackPanel>
        
        <!-- Tile Display Area -->
        <ScrollViewer Grid.Row="1" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
            <Canvas x:Name="TileCanvas" Background="Black" Width="1024" Height="1024"/>
        </ScrollViewer>
    </Grid>
</Window>
